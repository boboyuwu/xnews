<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/spark_orange</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CustomDayNightTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>

    <style name="SplashCustomDayNightTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <!--解决启动界面白屏问题-->
          <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
